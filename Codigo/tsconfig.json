{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],

    "types": ["reflect-metadata", "jest"],
    "moduleResolution": "node",
    "experimentalDecorators": true,

    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "noImplicitReturns": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["./src/**/*.ts"]
}
