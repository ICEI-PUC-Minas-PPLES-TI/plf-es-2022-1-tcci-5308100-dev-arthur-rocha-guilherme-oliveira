{
  "name": "covering",
  "displayName": "covering",
  "description": "coverage calculator using git",
  "icon": "resources/logo.jpeg",
  "repository": "https://github.com/ICEI-PUC-Minas-PPLES-TI/plf-es-2022-1-tcci-5308100-dev-arthur-rocha-guilherme-oliveira",
  "publisher": "covering",
  "version": "1.2.0",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "covering.open-file",
        "title": "Redirect to uncovered line"
      },
      {
        "command": "covering.generate-project-configuration-file",
        "title": "Generate project configuration file",
        "icon": "$(file-symlink-file)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "covering-explorer",
          "title": "Covering",
          "icon": "resources/logo.svg"
        }
      ]
    },
    "views": {
      "covering-explorer": [
        {
          "type": "webview",
          "id": "covering.config-view",
          "name": "Configuration"
        },
        {
          "type": "webview",
          "id": "covering.coverage-view",
          "name": "Coverage"
        },
        {
          "type": "tree",
          "id": "covering.uncovered-lines-view",
          "name": "Uncovered Lines"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "covering.generate-project-configuration-file",
          "when": "view == 'covering.config-view'",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "vsce": "vsce"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lcov-parse": "^1.0.0",
    "@types/mkdirp": "^1.0.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/rimraf": "^3.0.2",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.0",
    "typescript": "~4.7.2",
    "vsce": "^2.10.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "inversify": "^6.0.1",
    "lcov-parse": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6"
  }
}
